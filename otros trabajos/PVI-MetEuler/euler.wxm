/* [wxMaxima: input   start ] */
MetodoEuler(a,b,N,y0,f):=block(
    define(f(t,y), f),
    h:(b-a)/N,
    t:a,
    w:y0,
    for i:1 thru N do(
       w:w+h*f(t,w), /*calcule wi*/
       t:a+ i*h /*calcule ti*/
    ),
    print(w)
)$
/* [wxMaxima: input   end   ] */


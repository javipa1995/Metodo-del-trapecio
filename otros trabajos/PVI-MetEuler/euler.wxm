/* Valores exactos */
solucionExacta(a,b,h,y):=block(
    define(y(t), y),
    n:(b-a)/h,
    exactas:makelist(0,n+1),
    exactas[1]:y0,
    for i:1 thru n do(
        t:a+i*h, /*calcule ti*/
        exactas[i+1]:y(t),
        print(t, " |  ",exactas[i+1])
    ), 
    
    return(exactas)
)$
/* [wxMaxima: input   end   ] */

/* [wxMaxima: input   start ] */
/* Errores de las sucesivas aproximaciones */
erroresAprox(aprox, exac, a, b):=block(
    n:length(aprox)-1,
    h:(b-a)/n,
    errores:makelist(0,n),
    
    for i:2 thru n+1 do(
        errores[i-1]:abs(aprox[i]-exac[i]),
        t:a+(i-1)*h,
        print(t, " |  ",errores[i-1])
    ), 
    
    return(errores)
)$
/* [wxMaxima: input   end   ] */

